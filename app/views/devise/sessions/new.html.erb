<div class="container pt-5">
  <div class="card">
    <div class="card-header" style="background-color: #00001c; color: #FFF;">
      <h2 class="d-flex justify-content-center">login</h2>
    </div>
    <div class="card-body align-self-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="col-8 p-1">
          <%= f.email_field :email, autofocus: true, placeholder: "email", autocomplete: "email", class: "form-control"%>
        </div>

        <div class="col-8 p-1">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="col-8 p-1">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "form-label" %>
          </div>
        <% end %>

        <div class="col-8 p-1">
          <%= f.submit "Log in" %>
        </div>
        <% end %>
          <div class="col-12">
            <%= render "devise/shared/links" %>
          </div>
    </div>
    <div class="card-footer pt-3">
    </div>
  </div>
</div>